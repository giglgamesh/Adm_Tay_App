<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.oranch.restaurantroky.activities.PrincipalActivity"
    android:background="@color/colorFondo"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/relLayoutTop"
            android:layout_alignParentTop="true">
            //TITULO SUPERIOR Y BOTON
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/relLayoutTop2"
                android:background="#FFFFFF"
                android:layout_alignParentTop="true">
                //MARGEN SUPERIOR
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:id="@+id/relLayoutBordeSuperior">
                </RelativeLayout>
                //FIN MARGEN SUPERIOR
                //MARGEN IZQ
                <RelativeLayout
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/relLayoutBordeSuperior"
                    android:layout_above="@+id/relLayoutBordeInferior"
                    android:id="@+id/relLayoutIzq">
                </RelativeLayout>
                //FIN MARGEN IZQ
                //CONTENIDO SUPERIOR
                <RelativeLayout
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/relLayoutBordeSuperior"
                    android:layout_toRightOf="@+id/relLayoutIzq"
                    android:layout_toLeftOf="@+id/relLayoutDer"
                    android:id="@+id/relLayoutContenidoSuperior">

                    <RelativeLayout
                        android:id="@+id/botonVolver"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true">

                        <ImageView
                            android:id="@+id/arrowLeft"
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/ic_arrow_left" />

                        <TextView
                            android:id="@+id/activityVolver"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/arrowLeft"
                            android:autoSizeMaxTextSize="50sp"
                            android:autoSizeMinTextSize="15sp"
                            android:autoSizeStepGranularity="1sp"
                            android:autoSizeTextType="uniform"
                            android:text="@string/btn_volver"
                            android:textAlignment="center"
                            android:textSize="15sp" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/activityTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/perfil"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="20sp"
                        android:autoSizeMaxTextSize="50sp"
                        android:textSize="25sp"
                        android:autoSizeStepGranularity="1sp"/>
                </RelativeLayout>
                //FIN CONTENIDO SUPERIOR

                //MARGEN DERECHO
                <RelativeLayout
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/relLayoutBordeSuperior"
                    android:layout_above="@+id/relLayoutBordeInferior"
                    android:layout_alignParentRight="true"
                    android:id="@+id/relLayoutDer">


                </RelativeLayout>
                //FIN MARGEN DERECHO
            </RelativeLayout>
            //FIN TITULO SUPERIOR Y BOTON
        </RelativeLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/simpleSwipeRefreshLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/relLayoutTop"
            android:layout_above="@+id/relLayoutBot">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:id="@+id/layArriba"
                android:layout_width="fill_parent"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:background="@drawable/plomo_border_abajo"
                android:elevation="10dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
                </RelativeLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/perfilImagen"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@mipmap/ic_launcher"
                    android:layout_weight="1"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/colorPrimaryDark"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/fotoPerfil"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_photo_camera_2"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/layArriba"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                      <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/NombrePerfil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NOMBRE"
                                android:textColor="@color/colorPrimaryDark"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="15sp"
                                android:autoSizeMaxTextSize="50sp"
                                android:autoSizeStepGranularity="10sp"
                                android:textSize="15sp"
                                android:textAllCaps="true"
                                />
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1">
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.23">
                                <TextView
                                    android:id="@+id/textoInformacion"
                                    android:layout_alignParentLeft="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="INFORMACIÓN:"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="13sp"
                                    android:autoSizeMaxTextSize="50sp"
                                    android:textSize="13sp"
                                    android:paddingRight="15dp"
                                    />
                                <ImageView
                                    android:id="@+id/btnActualizarPerfil"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/textoInformacion"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_lapiz"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1">
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1">
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.05">
                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/scomida"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.29">
                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:id="@+id/textoComida"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="Comida criolla"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="12sp"
                                    android:autoSizeMaxTextSize="50sp"
                                    android:textSize="12sp"
                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1">
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"></RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.05">
                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/slocalizacion"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.29">
                                <TextView
                                    android:id="@+id/textoDireccion"
                                    android:paddingLeft="5dp"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="Barranco 1234"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="12sp"
                                    android:autoSizeMaxTextSize="50sp"
                                    android:textSize="12sp"
                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1">
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"></RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.05">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/scelular"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.29">
                                <TextView
                                    android:id="@+id/textoTelefono"
                                    android:paddingLeft="5dp"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="912345765"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="12sp"
                                    android:autoSizeMaxTextSize="50sp"
                                    android:textSize="12sp"
                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1">
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"></RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.05">
                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/sreloj"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.29">
                                <TextView
                                    android:id="@+id/textoHorario"
                                    android:paddingLeft="5dp"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="Horario de atención: 8:00am - 10:00pm"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="12sp"
                                    android:autoSizeMaxTextSize="50sp"
                                    android:textSize="12sp"
                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1">
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="5dp"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.85">
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@color/colorPlomo"
                                android:layout_weight="0.20">
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.85">
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"/>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.23">
                                <TextView
                                    android:id="@+id/textoServicio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="SERVICIOS:"
                                    android:paddingRight="40dp"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMinTextSize="13sp"
                                    android:autoSizeMaxTextSize="50sp"
                                    android:textSize="13sp"
                                    />
                                <ImageView
                                    android:layout_toRightOf="@+id/textoServicio"
                                    android:id="@+id/btnActualizarServicios"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_lapiz"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1">

                            </RelativeLayout>
                        </LinearLayout>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/idRecyclerServicios"
                            android:layout_weight="0.7"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"/>
                    </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/relLayoutBot"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF">

            <android.support.design.widget.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bottomNavView_Bar"
                android:background="@drawable/plomo_border_top"
                app:menu="@menu/bottom_navigation_menu"
                app:itemIconTint="@drawable/bottom_nav_colors"
                app:itemTextColor="@drawable/bottom_nav_colors">

            </android.support.design.widget.BottomNavigationView>

        </RelativeLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
